package jdbc_database;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class create_prestatement {
	public static void main(String args[])
	        throws Exception
	{
	Class.forName("oracle.jdbc.driver.OracleDriver");
	Connection con=DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","goutham");
	
	PreparedStatement ps=con.prepareStatement("CREATE TABLE persons(firstName varchsr(250),lastName varchar(240),depertment varchar(250),id number(10)");

	long t1=System.currentTimeMillis();
	
	
	ps.execute();

	

	//cal time for after insertion
	long t2=System.currentTimeMillis();
	System.out.println("time="+(t2-t1));
	//close conection
	con.close();
	}
	}



